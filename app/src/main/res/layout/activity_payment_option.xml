<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/RR_toolbaar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp">

                <ImageView
                    android:id="@+id/iv_Back"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:src="@drawable/backnew"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp">

                </ImageView>

                <TextView
                    android:layout_gravity="center_vertical"
                     android:textStyle="bold"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_22sdp"
                    android:text="@string/payment"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <RelativeLayout
                android:background="@color/Light"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/RRCreditCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp">

                <ImageView
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:id="@+id/img_cridit"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:src="@drawable/credit"
                     android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    >

                </ImageView>

                <TextView
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/img_cridit"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/credit_card_or_debit"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>


            <RelativeLayout
                 android:id="@+id/RRpayment"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp">

                <ImageView
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:src="@drawable/ic_paypal"
                    android:id="@+id/imgFt"
                    android:padding="@dimen/_5sdp"
                     android:layout_centerVertical="true"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    >

                </ImageView>

                <TextView
                    android:layout_toRightOf="@+id/imgFt"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/paypal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>


            <TextView
                android:visibility="gone"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                android:id="@+id/txtNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_120sdp"
                android:background="@drawable/bg_blue_border"
                android:elevation="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:padding="@dimen/_12sdp"
                android:text="Next"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />


        </LinearLayout>

    </RelativeLayout>



</layout>
