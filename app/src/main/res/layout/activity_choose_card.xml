<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/gradient"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act.ui.activity.ChooseCardActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/RR_toolbaar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <ImageView
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/backnew"
            android:padding="@dimen/_5sdp"
            android:id="@+id/iv_Back"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp">

        </ImageView>

        <TextView
            android:gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:id="@+id/sihn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/choose_card"
            android:textColor="@color/dark"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/add"
            android:padding="@dimen/_5sdp"
            android:id="@+id/iv_Add"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            app:tint="@color/blue">

        </ImageView>


    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardCornerRadius="10dp"
        android:layout_below="@+id/layout"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">

<!--        <ss.com.bannerslider.Slider-->
<!--            android:id="@+id/banner_slider1"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="180dp" />-->

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_Card_Image"
            android:src="@drawable/creditcardtwo"
            android:layout_width="match_parent"
            android:layout_height="180dp" />


    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_Pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/bg_blue_border"
        android:elevation="@dimen/_5sdp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="@dimen/_12sdp"
        android:text="@string/pay_766_86"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />



</LinearLayout>